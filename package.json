{
  "name": "mindmap-electron-v2",
  "version": "1.0.1",
  "main": "main.js",
  "scripts": {
    "start": "set NODE_ENV=development && electron .",
    "pack": "electron-builder --dir",
    "build": "electron-builder --win --x64",
    "dist": "electron-builder --win --x64 --publish never"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "express": "^4.21.2",
    "glob": "^11.0.1",
    "node-machine-id": "^1.1.12"
  },
  "devDependencies": {
    "electron": "^35.0.2",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.mindmap.app.v2",
    "productName": "开源思维导图工具导出版",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "extraResources": [
      {
        "from": "resources/img",
        "to": "img",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "main.js",
      "preload.js",
      "public/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "public/favicon.ico",
      "requestedExecutionLevel": "asInvoker",
      "asarUnpack": "resources/img"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "language": "2052",
      "shortcutName": "开源思维导图工具导出版"
    }
  }
}
